{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class="main">
  {{#with data}}
  <form method="POST" action="/purchase-submit?id={{id}}" class="form-card">
    {{> heading title="Ваше замовлення"}}

    <ul class="cart">
      {{#each cart}}
      <li class="cart__item">
        <span>{{text}}</span>
        <span>${{price}}</span>
      </li>
      {{/each}}
    </ul>

    {{>divider}}

    {{> heading title="Оформлення замовлення"}}

    {{>field label="Ім'я" name="firstname"}}

    {{>field label="Прізвище" name="lastname"}}

    {{>field label="Номер телефону" name="phone"}}

    {{>field label="Email адреса" name="email"}}

    {{>field label="Коментар" name="comment"}}

    {{>field label="Зняти бонуси" name="bonus"}}

    {{>field label="Промокод" name="promocode"}}

    {{>divider}}

    {{>field value=totalPrice name="totalPrice" disabled=true}}
    {{>field value=productPrice name="productPrice" disabled=true}}
    {{>field value=deliveryPrice name="deliveryPrice" disabled=true}}
    {{>field value=amount name="amount" disabled=true}}

    <strong class="form-card__total">Всього: ${{totalPrice}} (${{bonus}} в бонусах)</strong>

    {{>button text="Замовити"}}


  </form>
  {{/with}}
</main>

